@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center align-items-center">
    <h2 class="text-center m-4">Department Details</h2>

    <div class="row justify-content-center align-items-center">
        <ul class="col-6 nav nav-tabs" id="DepartmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" aria-controls="general" role="tab" aria-selected="true">General</a>
            </li>

            <li class="nav-item" role="presentation">
                <a class="nav-link" id="Administration-tab" data-bs-toggle="tab" href="#administration" aria-controls="administration" role="tab" aria-selected="false">Administration</a>
            </li>
        </ul>
    </div>

    <div class="row justify-content-center align-items-center tab-content" id="myTabContent">
        @* General Tab Content *@
        <div class="col-6 tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

            <div class="">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <label class="col-form-label" asp-for="CreationDate"></label>
                    <input asp-for="CreationDate" class="form-control" readonly />
                </div>

            </div>
        </div>

        @* Administration Tab Content *@
        <div class="col-6 tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">

            <div class="form-group">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div><div class="form-group">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>

        <div class="text-center">
            @if (ViewBag.Title == "Details")
            {
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                </div>
            }
            else
            {
                <form asp-action="Delete" asp-route-id="@Model.Id" class="mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                </form>
            }
        </div>

    </div>

</div>